<p id="notice"><%= notice %></p>
<div data-controller="hello">
  <h1>Tickets</h1>
    <button data-action='click->hello#say_hello'>coucou</button>
    <p data-target='hello.output'></p>
  </div>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tickets.each do |ticket| %>
          <tr>
            <td><%= ticket.title %></td>
            <td><%= link_to 'Show', ticket %></td>
            <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
            <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Ticket', new_ticket_path %>


